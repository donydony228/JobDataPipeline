# ============================================================================
# 本地開發環境配置 - 連接雲端資料庫
# ============================================================================

# Airflow 本地設定
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__FERNET_KEY=local-dev-fernet-key-32-chars-long!
AIRFLOW__WEBSERVER__SECRET_KEY=local-dev-secret-key

# 本地資料庫 (由 Docker Compose 提供)
AIRFLOW_DB_URL=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow
DWH_DB_HOST=localhost
DWH_DB_PORT=5433
DWH_DB_NAME=job_data_warehouse
DWH_DB_USER=dwh_user
DWH_DB_PASSWORD=dwh_password

# 雲端資料庫 - Supabase (用於 ETL 目標)
SUPABASE_DB_HOST=db.mzxadnjwgexlvhgleuwm.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=[你的 Supabase 密碼]
SUPABASE_DB_URL=postgresql://postgres:[你的密碼]@db.mzxadnjwgexlvhgleuwm.supabase.co:5432/postgres

# 雲端資料庫 - MongoDB Atlas
MONGODB_ATLAS_URL=mongodb+srv://job_data_user:[你的密碼]@job-data-cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_ATLAS_DB_NAME=job_market_data

# MinIO 本地設定
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Redis 本地設定
REDIS_URL=redis://localhost:6379

# 爬蟲設定
REQUEST_DELAY=2.0
CONCURRENT_REQUESTS=16
MAX_RETRIES=3
USE_PROXY=false

# 開發環境標記
ENVIRONMENT=development
LOG_LEVEL=INFO
